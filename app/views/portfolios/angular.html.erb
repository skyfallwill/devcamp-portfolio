<h1>Portfolio Items</h1>
<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin)  %>

<% @angular_portfolio_items.each do |portfolio_item| %>
    <p><%= link_to(portfolio_item.title, portfolio_show_path(portfolio_item)) %></p>
    <p><%= portfolio_item.subtitle %></p>
    <p><%= portfolio_item.body %></p>
    <p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
    <p><%= link_to "Edit", edit_portfolio_path(portfolio_item)  if logged_in?(:site_admin) %></p>
    <td><%= link_to 'Destroy', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }  if logged_in?(:site_admin) %></td>
<% end %>